{
  "name": "trivia-educa-v0",
  "version": "0.1.0",
  "type": "module",
  "description": "Jogo de trivia educacional com gamificação (Educacross)",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,json,css}\"",
    "test": "vitest",
    "test:unit": "vitest run --dir tests/unit --coverage",
    "test:integration": "vitest run --dir tests/integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "playwright test tests/performance --reporter=html",
    "test:visual": "playwright test tests/visual --update-snapshots",
    "test:coverage": "vitest run --coverage",
    "analyze": "vite-bundle-visualizer"
  },
  "dependencies": {
    "pixi.js": "8.0.5",
    "gsap": "3.12.5",
    "howler": "2.2.4",
    "xstate": "5.9.1",
    "dexie": "4.0.1",
    "axios": "1.6.7"
  },
  "devDependencies": {
    "@playwright/test": "1.42.1",
    "@types/howler": "2.2.11",
    "@types/node": "20.11.25",
    "@typescript-eslint/eslint-plugin": "7.1.1",
    "@typescript-eslint/parser": "7.1.1",
    "@vitest/coverage-v8": "1.3.1",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "msw": "2.2.1",
    "playwright": "1.42.1",
    "prettier": "3.2.5",
    "typescript": "5.3.3",
    "vite": "5.1.6",
    "vite-bundle-visualizer": "1.0.1",
    "vite-plugin-compression": "0.5.1",
    "vite-plugin-pwa": "0.19.8",
    "vitest": "1.3.1"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
